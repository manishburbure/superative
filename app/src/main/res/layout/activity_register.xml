<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".Register">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Hi!"
            android:textColor="#ED7421"
            android:textSize="61dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Register a new account"
            android:textColor="@color/black"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_box_white"
            android:ems="10"
            android:hint="Name"
            android:maxLength="15"
            android:paddingStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_box_white"
            android:ems="10"
            android:hint="Mobile number"
            android:paddingStart="15dp"
            android:maxLength="10"
            android:fontFamily="@font/poppins_medium"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_box_white"
            android:ems="10"
            android:hint="Email"
            android:paddingStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_box_white"
            android:ems="10"
            android:hint="Password"
            android:maxLength="15"
            android:paddingStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_box_white"
            android:ems="10"
            android:hint="Confirm Passoword"
            android:maxLength="15"
            android:paddingStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4" />


        <EditText
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_box_white"
            android:ems="10"
            android:hint="City"
            android:maxLength="10"
            android:paddingStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextTextPersonName7"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_box_white"
            android:ems="10"
            android:hint="State"
            android:maxLength="10"
            android:paddingStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName6"
            app:layout_constraintTop_toBottomOf="@id/editTextTextPersonName5" />

        <Spinner
            android:id="@+id/editTextTextPersonName8"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_box_white"
            android:ems="10"
            android:paddingStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:entries="@array/select_profession"
            android:dropDownSelector="@drawable/arrow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName6" />

        <Spinner
            android:id="@+id/editTextTextPersonName9"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_box_white"
            android:ems="10"
            android:paddingStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:entries="@array/select_income"
            android:dropDownSelector="@drawable/arrow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="50dp"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/rectangle_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName9" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/poweruserBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_black_background"
            android:text="REGISTER AS POWER USER"
            android:textColor="#ED7421"
            android:textSize="18dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signupBtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>