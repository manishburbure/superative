<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="#ED7421"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <EditText
        android:id="@+id/tv_mobile_login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rectangle_brown"
        android:ems="10"
        android:paddingStart="15dp"
        android:inputType="number"
        android:maxLength="10"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login"
        android:drawableStart="@drawable/mobile_icon"
        android:drawablePadding="10dp"
        android:hint="Mobile number"

    />



    <EditText
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_medium"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:background="@drawable/rectangle_brown"
        android:hint="Password"
        android:maxLength="15"
        android:drawableStart="@drawable/password_icon"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mobile_login"

      />

    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Forgot Password"
        android:textColor="#ED7421"
        android:textSize="18dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_orange"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgot_password" />


    <TextView
        android:id="@+id/tv_for_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textColor="#ED7421"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        android:paddingStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Don't have an Account"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />


</androidx.constraintlayout.widget.ConstraintLayout>